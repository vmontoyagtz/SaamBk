<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="SaamApp.Maui.Client.TextInputLayoutFeatures"
             xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core" Title="Text Input Layout">
        <VerticalStackLayout VerticalOptions="Center">
        <inputLayout:SfTextInputLayout Hint="Name" ContainerType="Outlined" WidthRequest="300"
                               HelperText="Enter your name"
                               ErrorText="Please enter your name">
            <Entry/>
        </inputLayout:SfTextInputLayout>
    </VerticalStackLayout>
</ContentPage>
